script(type="text/template", id="film-template")
  td(class="name")
    <a href="http://www.imdb.com/title/<%= imdb %>"><img src="images/imdb.png"/></a>
    <a href="http://www.imdb.com/title/<%= imdb %>"><%= english_name %></a>
  td(class="seen") <%= seen %>
  td(class="format") <%= format %>
  td(class="rating") <%= rating %>

#main
  table
    thead
      th(class="name") Name
      th(class="seen") Seen
      th(class="format") Format
      th(class="rating") Rating
    tbody(id="films")
